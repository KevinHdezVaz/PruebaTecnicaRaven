<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articlesFragment">

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.example.pruebatecnicaraven.ui.articles.ArticlesFragment"
        android:label="Hacker News - Android"
        tools:layout="@layout/fragment_articles">

        <action
            android:id="@+id/action_articlesFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.example.pruebatecnicaraven.ui.detail.ArticleDetailFragment"
        android:label="{articleTitle}"
        tools:layout="@layout/fragment_article_detail">

        <argument
            android:name="articleUrl"
            app:argType="string" />

        <argument
            android:name="articleTitle"
            app:argType="string"
            android:defaultValue="Article" />
    </fragment>

</navigation>